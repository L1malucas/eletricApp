        </LinearLayout>
        <TableRow android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent"> android:layout_marginTop=&quot;100dp&quot;&gt;\10
            <TextView android:textStyle="bold" android:id="@+id/txt_tensãoq" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tensão (V):" android:layout_weight="0.3" android:textAlignment="center"/>
