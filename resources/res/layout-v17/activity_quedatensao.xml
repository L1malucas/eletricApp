                <TextView android:gravity="center_horizontal" android:id="@+id/txt_fioq" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:textAlignment="textStart"/>
            </LinearLayout>
        </TableRow>
        <TableRow>
            <TextView android:textStyle="bold" android:gravity="center_horizontal" android:id="@+id/txt_disjuntor" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Disjuntor (A):" android:layout_alignParentBottom="true" android:textAlignment="textEnd"/>
            <LinearLayout android:orientation="horizontal" android:padding="3dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:gravity="center_horizontal" android:id="@+id/txt_disjuntorq" android:layout_width="40dp" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:textAlignment="textStart"/>
