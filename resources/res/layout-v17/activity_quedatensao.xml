            <TextView android:textStyle="bold" android:id="@+id/txt_potenciaq" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Potência(W):" android:layout_weight="0.3" android:textAlignment="center"/>
            <EditText android:id="@+id/edt_potenciaq" android:layout_width="50dp" android:layout_height="40dp" android:ems="10" android:layout_weight="0.52" android:inputType="numberDecimal"/>
        </TableRow>
        <TableRow android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent"> android:layout_marginTop=&quot;100dp&quot;&gt;\10
            <TextView android:textStyle="bold" android:id="@+id/txt_distanciaq" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Distancia(m):" android:layout_weight="0.3" android:textAlignment="center"/>
            <EditText android:id="@+id/edt_distanciaq" android:layout_width="50dp" android:layout_height="40dp" android:ems="10" android:layout_weight="0.52" android:inputType="numberDecimal"/>
        </TableRow>
        <TableRow android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent"> android:layout_marginTop=&quot;100dp&quot;&gt;\10
            <TextView android:textStyle="bold" android:id="@+id/txt_perdatensão" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Queda de Tênsão(%)" android:layout_weight="0.3" android:textAlignment="center"/>
            <EditText android:id="@+id/edt_perdatensao" android:layout_width="50dp" android:layout_height="40dp" android:ems="10" android:layout_weight="0.52" android:inputType="numberDecimal"/>
        </TableRow>
        <LinearLayout android:orientation="horizontal" android:id="@+id/cabecalho" android:background="#000000" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:gravity="center_horizontal" android:id="@+id/btn_caldimq" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Calcular" android:layout_alignParentBottom="true"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:background="#fff500" android:padding="3dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Disjuntor e Seção do condutor " android:layout_alignParentBottom="true"/>
        </LinearLayout>
        <TableRow>
            <TextView android:textStyle="bold" android:gravity="left" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Corrente (A):" android:layout_alignParentBottom="true" android:textAlignment="textEnd"/>
            <LinearLayout android:orientation="horizontal" android:padding="3dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:gravity="left" android:id="@+id/txt_correnteq" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:textAlignment="textStart"/>
            </LinearLayout>
        </TableRow>
        <TableRow>
            <TextView android:textStyle="bold" android:gravity="center_horizontal" android:id="@+id/txt_fio" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Seção(mm²):" android:layout_alignParentBottom="true" android:textAlignment="textEnd"/>
