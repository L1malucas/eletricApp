        </TableRow>
        <LinearLayout>
            <TableRow android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="0dp" android:layout_marginTop="1dp">
                <ImageView android:id="@+id/image1" android:tag="http://profwaldemarojr.wixsite.com/ctep/escolha-seu-curso" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/anuncio1" android:onClick="openBrowser"/>
