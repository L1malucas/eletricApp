        <LinearLayout>
            <TableRow android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginTop="25dp">
                <TextView android:textSize="18sp" android:textColor="#fff500" android:gravity="center" android:id="@+id/btn_sobre" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Sobre &apos;ELETRICISTA FÁCIL&apos;" android:layout_alignParentBottom="true"/>
